        placeholder="Pesan Validasi"
        class="border p-2 rounded text-sm"
      />
      <input
        v-model="localField.class"
        placeholder="col-md-6 mb-5"
        class="border p-2 rounded text-sm"
      />
    </div>

    <div class="mt-2 flex items-center">
      <input
        v-model="localField.required"
        type="checkbox"
        class="h-4 w-4 text-blue-600 border-gray-300 rounded"
      />
      <label class="ml-2 text-sm text-gray-700">Required</label>
    </div>
  </div>
</template>

<script setup lang="ts">
import { ref, watch } from "vue";

const props = defineProps<{
  field: any;
  index: number;
}>();

const emit = defineEmits<{
  update: [field: any];
  remove: [];
}>();

const localField = ref({ ...props.field });

watch(
  localField,
  (newVal) => {
    emit("update", newVal);
  },
  { deep: true }
);

watch(
  () => props.field,
  (newVal) => {
    localField.value = { ...newVal };
  },
  { deep: true }
);
</script>

