      </p>

      <!-- Form Name Input -->
      <div class="mb-5">
        <label class="block font-semibold text-gray-700 mb-1">Nama Form</label>
        <input
          :value="formName"
          @input="$emit('update:formName', $event.target.value)"
          type="text"
          class="border border-gray-300 rounded-lg w-full p-2.5 focus:ring-2 focus:ring-blue-500 focus:outline-none"
          placeholder="Contoh: ContactForm"
        />
      </div>

      <!-- Fields List -->
      <div class="mb-6">
        <h3 class="font-semibold text-gray-700 mb-2">Form Fields</h3>
        
        <FieldItem
          v-for="(field, i) in fields"
          :key="i"
          :field="field"
          :index="i"
          @update="updateField(i, $event)"
          @remove="$emit('remove-field', i)"
        />

        <button
          @click="$emit('add-field')"
          class="text-blue-600 text-sm hover:underline mt-2"
        >
          + Tambah Field
        </button>
      </div>
    </div>
  </div>
</template>

<script setup lang="ts">
import FieldItem from "@/components/FieldItem.vue";

defineProps<{
  formName: string;
  fields: any[];
}>();

const emit = defineEmits<{
  "update:formName": [value: string];
  "update:fields": [value: any[]];
  "add-field": [];
  "remove-field": [index: number];
}>();

function updateField(index: number, updatedField: any) {
  const newFields = [...props.fields];
  newFields[index] = updatedField;
  emit("update:fields", newFields);
}

const props = defineProps<{
  formName: string;
  fields: any[];
}>();
</script>

